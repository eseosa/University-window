<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %> </title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
    <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
    <style type="text/css" media="screen">
    #content {
        float: left;
        background-color: #d3d3d3;
        border: 3px solid #aaa;
        border-top: none;
        padding: 25px;
        width: 500px;
      }
      #sidebar {
        float: right;
        width: 175px;
      }
      #sidebar ul {
        margin-left: 0;
        padding-left: 0;
      }
      #sidebar ul h3 {
        margin-top: 25px;
        font-size: 16px;
        padding-bottom: 10px;
        border-bottom: 1px solid #ccc;
      }
      #sidebar li {
        list-style-type: none;
      }
      #sidebar ul.links li {
        margin-bottom: 5px;
      }
      #page {
        background-color: #f0f0f0;
        width: 750px;
        margin: 0;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <%= image_tag("logo.png", :alt => "Education", :class=> "round")%>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", pages_home_path %></li>
            <li><%= link_to "About us", pages_aboutus_path %></li>
            <li><%= link_to "Contact", pages_contact_path %></li>
          </ul>
        </nav>
      </header>
     <% flash.each do |name, msg| %>  

    <%= content_tag :div, msg, :id => "flash#{name}" %>  

  <% end %>  


    <%= yield %>
  </body>
</html>